local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "IndieInk Noob Exterminators",
   Icon = 0,
   LoadingTitle = "Loading non brainrot games",
   LoadingSubtitle = "Join our discord!",
   ShowText = "hi",
   Theme = "Default",

   ToggleUIKeybind = "K",

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = false,
      FolderName = "IndieInkCfg",
      FileName = "IndieInk"
   },

   Discord = {
      Enabled = true,
      Invite = "2CPW6seNNv",
      RememberJoins = true
   },

   KeySystem = false,
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

-- Optional: only run in your target game (remove if testing elsewhere)
if game.PlaceId ~= 16395296930 then
   Rayfield:Notify({
      Title = "Note",
      Content = "Script loaded — best used in Noob Exterminators or your own place.",
      Duration = 5
   })
end

-- Welcome
Rayfield:Notify({
   Title = "IndieInk Ready!",
   Content = "Press K to open UI → Mobility tab",
   Duration = 5
})

-- Mobility Tab
local MobilityTab = Window:CreateTab("Mobility", "move")

-- Section
local Section = MobilityTab:CreateSection("Movement Controls")

-- Simple Walk Speed slider (no bypasses — just normal change)
local Slider = MobilityTab:CreateSlider({
   Name = "Walkspeed changer",
   Range = {16, 100},           -- safe & reasonable range
   Increment = 5,
   Suffix = "Speed",
   CurrentValue = 16,           -- default Roblox walk speed
   Flag = "WalkSpeedChanger",
   Callback = function(Value)
      local player = game.Players.LocalPlayer
      local char = player.Character
      if char then
         local humanoid = char:FindFirstChildWhichIsA("Humanoid")
         if humanoid then
            humanoid.WalkSpeed = Value
         end
      end
   end,
})

-- Optional: re-apply on respawn (harmless)
game.Players.LocalPlayer.CharacterAdded:Connect(function(char)
   local humanoid = char:WaitForChild("Humanoid", 5)
   if humanoid then
      -- You can re-set to saved value if you want (via Rayfield:GetFlag)
      humanoid.WalkSpeed = 16  -- or Slider.CurrentValue if you store it
   end
end)

-- Test label so you know tabs loaded
MobilityTab:CreateLabel("Slider ready — try changing speed!")
